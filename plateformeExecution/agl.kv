#:kivy 1.9.0

<BottomButton@Button>
    size_hint: .15, .15

<DropDownButton@Button>
    size_hint_y: None
    height: 50

ScreenManagement:
    ProjectScreen:
    MainScreen:

<ProjectScreen>:
    name: 'project_management'

    GridLayout:
        cols:1
        rows:2

        GridLayout:
            cols:2

            Label:
                text: 'Nom du projet : '
            TextInput:
                id: project_name
                text: "Nouveau_projet"
                multiline: False
                focus: True
                padding: [50, ( self.height - self.line_height ) / 2]

        Button:
            on_release: app.root.current = 'other'
            text: 'Lancer projet'
            font_size: 20
            on_press: root.init_all(project_name.text)

<MainScreen>:
    name: 'other'
    ref_tree_widget: refID
    on_enter: refID.first_update()
    GridLayout:
        cols:1
        rows:3
        ActionBar:
            pos_hint: {'top':1}
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: root.action_bar_title
                    with_previous: False
                ActionButton:
                    text: 'Quitter'
                    on_press: quit()

        TabbedPanel:
            do_default_tab: False
            TabbedPanelItem:
                text: "Spécification"
                GridLayout:
                    cols: 1
                    rows: 2

                    Label:
                        text: '1. Lancer DIA\n2. Enregistrer le fichier dans le dossier de specification en decochant "compress diagram files"'
                    BoxLayout:
                        orientation: "horizontal"
                        BottomButton:
                            text: "Lancer DIA"
                            on_press: root.launch_dia()
            TabbedPanelItem:
                text: "Conception"
                GridLayout:
                    cols: 1
                    rows: 2

                    Label:
                        text: '1. Lancer DIA\n2. Enregistrer chaque diagramme avec pour nom de fichier le nom du use-case\n3. Lancer Flowchart to Code'
                    BoxLayout:
                        orientation: "horizontal"
                        BottomButton:
                            text: "Lancer DIA"
                            on_press: root.launch_dia()
                        BottomButton:
                            text: "Lancer Flowchart To Code"
                            on_press: root.launch_f2c()
                        BottomButton:
                            text: "Fusionner le code"
                            on_press: root.launch_mergeScript()
                        BottomButton:
                            text: "Générer les tables SQL"
                            on_press: root.launch_generateSQL()
            TabbedPanelItem:
                text: "Réalisation"
                BoxLayout:
                    orientation: "horizontal"
                    BottomButton:
                        text: "Lancer IntelliJ IDEA"
                        on_press: root.launch_intellij()
            TabbedPanelItem:
                text: "Test"
                BoxLayout:
                    orientation: "horizontal"
                    BottomButton:
                        text: "Lancer IntelliJ IDEA"
                        on_press: root.launch_intellij()
  
        RefTreeWidget:
            # NOTE: It's a FloatLayout
            id: refID